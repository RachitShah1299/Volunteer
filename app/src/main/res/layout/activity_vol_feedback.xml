<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".vol_feedback">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/startblue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bcbtn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Feedback"
            android:textColor="@color/graylight"
            android:textSize="@dimen/_20ssp" />

    </LinearLayout>

    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="Helping Hands"
        android:textColor="@color/startblue"
        android:textSize="@dimen/_35ssp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_form_title"
        android:layout_marginLeft="@dimen/_75sdp"
        android:text="Always here to help you :)"
        android:textSize="@dimen/_15ssp" />

    <!--

        <EditText
            android:id="@+id/fed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/fed_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Email"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/fed_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Phone"
            android:inputType="phone" />
    -->

    <EditText
        android:id="@+id/fed_msg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_below="@id/help"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:breakStrategy="balanced"
        android:fitsSystemWindows="true"
        android:gravity="top"
        android:hint="Your Message"
        android:inputType="textMultiLine"
        android:padding="@dimen/_5sdp"
        android:singleLine="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fed_msg"
        android:layout_marginTop="@dimen/_20ssp">

        <Button
            android:id="@+id/fed_submit"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="1dp"
            android:background="@color/startblue"
            android:elevation="4dp"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="@dimen/_20ssp" />

        <Button
            android:id="@+id/fed_cancel"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_toEndOf="@+id/fed_submit"
            android:layout_toRightOf="@+id/fed_submit"
            android:background="@color/startblue"
            android:elevation="4dp"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="@dimen/_20ssp" />


    </RelativeLayout>


</RelativeLayout>