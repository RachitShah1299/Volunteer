<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:textColorHint="@color/graylight"
    tools:context=".Signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile1" />

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Volunteer Name"
            android:inputType="textPersonName"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/user"

            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_below="@+id/profile"
            android:layout_toLeftOf="@+id/name"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/eid"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/user"
            android:layout_toLeftOf="@+id/email"
            android:src="@drawable/message" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/pas"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/eid"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/pass"
            android:src="@drawable/lock" />

        <EditText
            android:id="@+id/mono"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/mno"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/pas"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_toLeftOf="@+id/mono"
            android:src="@drawable/smartphone" />

        <EditText
            android:id="@+id/add"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mono"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/ad"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/mno"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_toLeftOf="@+id/add"
            android:src="@drawable/home" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Birth Date"
            android:inputType="date"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/bd"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/ad"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/dob"
            android:src="@drawable/calendar" />

        <EditText
            android:id="@+id/lic"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="License Number"
            android:inputType="text"
            android:textColor="@color/graylight"
            android:textColorHint="@color/graylight"
            android:textSize="@dimen/_16ssp" />

        <ImageView
            android:id="@+id/dl"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/bd"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/lic"
            android:src="@drawable/license" />

        <Spinner
            android:id="@+id/gen"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lic"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:entries="@array/Gender"
            android:outlineAmbientShadowColor="@color/graylight"
            android:outlineSpotShadowColor="@color/graylight"
            android:prompt="@string/Gender_Prompt"
            android:textColor="@color/graylight"></Spinner>


        <ImageView
            android:id="@+id/geni"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/dl"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/lic"
            android:src="@drawable/gender" />

        <Button
            android:id="@+id/sbtn"
            android:layout_width="@dimen/_165sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/gen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_55sdp"
            android:background="@drawable/btn"
            android:text="Signup" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Already Have an Account ?"
            android:textColor="@color/graylight" />
    </RelativeLayout>
</ScrollView>