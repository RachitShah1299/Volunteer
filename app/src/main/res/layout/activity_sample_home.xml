<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    tools:context=".SampleHome"
    >

    <android.support.v7.widget.CardView

        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/startblue"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/res1" />

            <TextView
                android:id="@+id/resname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@+id/img"
                android:text="Sandwich House"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/resloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resname"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/img"
                android:text="S.G Highway"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/rid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Request Id"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_marginLeft="@dimen/_160sdp"
                android:layout_toRightOf="@+id/rid"
                android:text="FD001"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp" />


            <TextView
                android:id="@+id/food_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rid"
                android:layout_marginLeft="-75dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/rid"
                android:gravity="center"
                android:text="Food Description"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp" />


            <TextView
                android:id="@+id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_desc"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="-------------------------------------------------------------------------------------"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp" />

            <ImageButton
                android:id="@+id/yes"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/ln"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/round"
                android:src="@drawable/ac" />

            <ImageButton
                android:id="@+id/no"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/ln"
                android:layout_margin="@dimen/_2sdp"
                android:layout_toRightOf="@+id/yes"
                android:background="@drawable/round"
                android:src="@drawable/dc" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@id/ln"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Contact Restaurant"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln"
                android:layout_marginTop="-2dp"
                android:text="@string/Call"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_160sdp"

                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Food Pickup"
        android:visibility="invisible" />


</RelativeLayout>