<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vol_profile"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/startblue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bcbtn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Profile"
            android:textColor="@color/graylight"
            android:textSize="@dimen/_20ssp" />

    </LinearLayout>


    <ScrollView
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="103dp"
                    android:layout_marginRight="103dp"
                    android:layout_marginBottom="22dp"
                    android:elevation="15px"
                    android:src="@drawable/camm" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="122dp"
                    android:elevation="10px"
                    android:src="@drawable/profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90dp"
                    android:background="@color/startblue"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">

                </LinearLayout>
            </RelativeLayout>



            <EditText
                android:id="@+id/prof_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="Volunteer's Name" />



            <EditText
                android:id="@+id/prof_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="Email" />


            <EditText
                android:id="@+id/prof_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="Phone Number"
                android:textSize="20dp"

                />



            <EditText
                android:id="@+id/prof_address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Address"

                android:inputType="textPostalAddress" />



            <EditText
                android:id="@+id/prof_pswd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />


            <ImageButton
                android:id="@+id/save"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/round"
                android:elevation="@dimen/_15sdp"
                android:src="@drawable/save" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>