<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/OldPass"
        android:hint="Old Passsword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/NewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/OldPass"
        android:hint="New Password"
        android:layout_alignParentLeft="true" />
    <EditText
        android:id="@+id/RePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NewPass"
        android:hint="Retype New Password"
        android:layout_alignParentLeft="true" />


    <Button

        android:layout_width="149dp"
        android:layout_height="62dp"
        android:layout_below="@id/RePass"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_toStartOf="@+id/change_btn"
        android:layout_toLeftOf="@+id/change_btn"
        android:text="Cancel" />


    <Button
        android:id="@+id/change_btn"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_below="@+id/RePass"
        android:layout_alignEnd="@+id/OldPass"
        android:layout_alignRight="@+id/OldPass"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:text="Change Password" />



</RelativeLayout>
